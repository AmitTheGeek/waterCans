<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity" >

<RelativeLayout
    android:id="@+id/branded_water"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="#FFFFFF">
    <ImageView
        android:id="@+id/first_section_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/fragment_top_padding"
        android:src="@drawable/bisleri_water" />
    <TextView
        android:layout_marginTop="18dp"
        android:id="@+id/first_section_text"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/first_section_image"
        android:textSize="30sp"
        android:fontFamily="sans-serif"
        android:text="@string/bisleri_water" />       
    <TextView
        android:id="@+id/first_section_second_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/first_section_image"
        android:layout_below="@+id/first_section_text"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-thin"
        android:text="@string/Rs2" />    
    <Button
        android:id="@+id/angry_btn1"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/first_section_image"
        android:layout_below="@id/first_section_second_text"
        android:text="BUY"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape"
        android:onClick="betterQualityWater"/>
    </RelativeLayout>
    
<RelativeLayout
    android:layout_marginTop="20dp"
    android:id="@+id/normal_water"
    android:layout_weight="1"
    android:layout_below="@+id/branded_water"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">
    <ImageView
        android:id="@+id/second_section_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/fragment_top_padding"
        android:src="@drawable/normal_water" />
    <TextView
        android:layout_marginTop="19dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/second_section_text"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/second_section_image"
        android:textSize="30sp"
        android:fontFamily="sans-serif"
        android:text="@string/normal_water" />
    <TextView
        android:id="@+id/second_section_second_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/second_section_image"
        android:layout_below="@+id/second_section_text"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-thin"
        android:text="@string/Rs1"/>
    <Button
        android:id="@+id/angry_btn2"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/second_section_image"
        android:layout_below="@id/second_section_second_text"
        android:text="BUY"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape"
        android:onClick="lesserQualityWater"/>
  
    </RelativeLayout>
    

</LinearLayout>