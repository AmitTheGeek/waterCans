<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <EditText
       android:layout_width="fill_parent"
       android:layout_height="50dp"
       android:id="@+id/editName"
       android:hint="Name"
       android:singleLine="true"
       android:inputType="textCapWords" />

    <EditText
       android:layout_below="@id/editName"
       android:layout_width="fill_parent"
       android:layout_height="50dp"
       android:id="@+id/editInp1"
       android:hint="Flat/House/Office No."
       android:singleLine="true"
       android:inputType="textCapWords" />

    <EditText
       android:layout_below="@+id/editInp1"
       android:layout_width="fill_parent"
       android:layout_height="50dp"
       android:id="@+id/editInp2"
       android:hint="Street/Society/OfficeName"
       android:singleLine="true"
       android:inputType="textCapWords" />

   <EditText
       android:layout_below="@+id/editInp2"
       android:layout_width="fill_parent"
       android:layout_height="50dp"
       android:id="@+id/editInp3"
       android:hint="Landmark/Locality"
       android:singleLine="true"
       android:inputType="textCapWords" />
   
     <EditText
       android:layout_below="@+id/editInp3"
       android:layout_width="fill_parent"
       android:layout_height="50dp"
       android:id="@+id/editInp4"
       android:hint="City"
       android:singleLine="true"
       android:inputType="textCapWords" />
     
     <EditText
       android:layout_below="@+id/editInp4"
       android:layout_width="fill_parent"
       android:layout_height="50dp"
       android:id="@+id/Phone"
       android:hint="Phone"
       android:singleLine="true"
       android:inputType="textCapWords" />
     
     <Button
        android:id="@+id/angry_btn1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="CHECKOUT"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="@drawable/buttonshape"
        android:onClick="updateAddress"/>

</RelativeLayout>

